<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div id="top-bar">
        <h1>Tracker Home</h1>
        <a href="/tracker/new"><button class="btn btn-primary">Add Task</button></a>
      </div>
      <% if (tasks.length === 0){ %>
          <p>There's nothing here...</p>
      <% } %>
      <ul>
        <% for ( let i = 0; i < tasks.length; i++){ %>
          <a href="/tracker/<%=tasks[i].id%>" class="task-link">
            <li class="task<% if (tasks[i].status){%>-complete<%}%>">
              <div class="list-flex">
                <%= tasks[i].name %>
                <div class="task-note"><%=tasks[i].notes%></div>
              </div>
            </li>
          </a>
        <% } %>
      </ul>
    </div>
    <nav>
      <ul id="nav-list">
        <li class="nav-item"><a href="/tracker">Tracker</a></li>
        <li class="nav-item"><a href="/share">Share</a></li>
        <li class="nav-item"><a href="/help">Lost & Found</a></li>
      </ul>
    </nav>
  </body>
</html>
