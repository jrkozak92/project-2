<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div id="top-bar">
        <h1>Edit Task: <%=task.name%></h1>
      </div>
      <form action="/tracker/<%=task.id%>?_method=PUT" method="POST">
        <input type="text" name="name" value="<%=task.name%>"><br/>
        <label for="status">Completed?: </label>
        <input type="checkbox" name="status" <% if (task.status) { %>checked<% } %> ><br/>
        <textarea name="notes"><%=task.notes%></textarea><br/>
        <div id="button-bar">
          <a href="/tracker/<%=task.id%>" class="btn btn-secondary">Cancel</a>
          <input type="submit" class="btn btn-success" value="Update">
        </div>
      </form>
    </div>
  </body>
</html>
