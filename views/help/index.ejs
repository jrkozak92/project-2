<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container-fluid">
      <div id="top-bar">
        <h1>Lost & Found Home</h1>
        <a href="/help/new"><button class="btn btn-primary">Post</button></a>
      </div>
      <div id="card-container">
      <% if (posts.length === 0){ %>
          <p>There's nothing here...</p>
      <% } %>
      <% for ( let i = 0; i < posts.length; i++){ %>
        <a href="/help/<%=posts[i].id%>" class="post-link">
            <figure class="card <% if (posts[i].type === "lost"){%>lost<%} else {%>found<%}%>">
              <p class="lf-title"><%= posts[i].type.charAt(0).toUpperCase() + posts[i].type.slice(1)%> | <%= posts[i].title %></p>
              <% if (posts[i].img.path) {
                if (!posts[i].img.converted) {%>
                  <img src="data:image/<%=posts[i].img.contentType%>;base64,<%=posts[i].img.data.toString('base64')%>">
                <% } else {%>
                  <img src="<%=posts[i].img.path.slice(6)%>.png">
                <% } %>
              <% } %>
              <figcaption>
                <%=posts[i].content%>
              </figcaption>
            </figure>
        </a>
      <% } %>
      </div>
    </div>
    <a href="/help/map" id="map-link" class="btn btn-info">Map View</a>
    <nav>
      <ul id="nav-list">
        <li class="nav-item"><a href="/tracker"><span class="nav-link-text">Tracker</span></a></li>
        <li class="nav-item"><a href="/share"><span class="nav-link-text">Share</span></a></li>
        <li class="nav-item"><a href="/help"><span class="nav-link-text">Lost & Found</span></a></li>
      </ul>
    </nav>
  </body>
</html>
